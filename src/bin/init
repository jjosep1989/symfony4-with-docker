#!/bin/sh
mkdir symfony-app-2;
mkdir /my-app/symfony-app;
cd /my-app/symfony-app;
if [ -z "$1" ]; then
  echo "**Creacion de proyecto nuevo de symfony"
  composer create-project symfony/skeleton .
  composer require server --dev
else
  echo "**Clonando desde repositorio $1"
  git clone $1 /var/www/html
  rm -rf /var/www/html/.git
  echo "*****Instalacion de dependencias"
  # buscar acciones necesarias para el funcionamiento de symfony4
  # meteor npm install
fi

cp /home/symfony/docker-compose.yml /my-app/docker-compose.yml
cp /home/symfony/symfony.sh /my-app/symfony

# chown -R application:application /my-app;
# cp ~/my-app/.gitignore /var/www/html/.gitignore
echo "ejecutar ./symfony para arrancar la aplicacion"